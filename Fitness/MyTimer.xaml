<Window x:Class="Fitness.MyTimer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fitness"
        mc:Ignorable="d"
        Title="MyTimer" Height="332.4" Width="464" ResizeMode="CanMinimize">
    <Grid>
        <Button Name="StartTimer" Content="Начать отсчет" HorizontalAlignment="Left" Margin="129,184,0,0" VerticalAlignment="Top" Width="199" Height="52" Click="StartTimer_Click"/>
        <Label Name="lblSec" Content="00:00:00" HorizontalAlignment="Left" Margin="129,96,0,0" VerticalAlignment="Top" Height="68" Width="199" FontSize="48"/>
        <Button Name="StopTimer" Content="Остановить отсчет" HorizontalAlignment="Left" Margin="129,241,0,0" VerticalAlignment="Top" Width="199" Height="52" Click="StopTimer_Click"/>

    </Grid>
</Window>
